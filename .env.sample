# Thread Art Generator Environment Variables

# Server Configuration
ENVIRONMENT=development
GRPC_SERVER_PORT=9090
FRONTEND_URL=https://tag.local

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=threadmachine

# Queue Settings
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
QUEUE_COMPOSITION_PROCESSING=composition-processing

# Auth0 Management API
AUTH0_MANAGEMENT_API_CLIENT_ID=your-management-api-client-id
AUTH0_MANAGEMENT_API_CLIENT_SECRET=your-management-api-client-secret

# Email Settings
EMAIL_SENDER_NAME=Thread Art Generator
EMAIL_SENDER_ADDRESS=noreply@example.com
EMAIL_SENDER_PASSWORD=email-password
SENDINBLUE_API_KEY=your_sendinblue_api_key

# Admin Settings
ADMIN_EMAIL=admin@example.com

# Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_BUCKET=local-bucket
STORAGE_REGION=us-east-1
STORAGE_INTERNAL_ENDPOINT=http://minio:9000
STORAGE_EXTERNAL_ENDPOINT=http://localhost:9000
STORAGE_USE_SSL=false
STORAGE_FORCE_EXTERNAL_SSL=false
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin

# Node environment for frontend
NODE_ENV=development
TOKEN_SYMMETRIC_KEY=your-token-symmetric-key
