# Thread Art Generator Environment Variables

# Server Configuration
ENVIRONMENT=development
GRPC_SERVER_PORT=9090
HTTP_SERVER_PORT=9090
FRONTEND_PORT=8080
API_URL=http://api:9090
FRONTEND_URL=http://localhost:8080

# Database Settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=threadmachine

# Queue Settings
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
QUEUE_COMPOSITION_PROCESSING=composition-processing

# Firebase Authentication
FIREBASE_PROJECT_ID=demo-thread-art-generator
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_WEB_API_KEY=demo-api-key
FIREBASE_AUTH_DOMAIN=demo-thread-art-generator.firebaseapp.com

# Email Settings
EMAIL_SENDER_NAME=Thread Art Generator
EMAIL_SENDER_ADDRESS=noreply@example.com
EMAIL_SENDER_PASSWORD=email-password
SENDINBLUE_API_KEY=your_sendinblue_api_key

# Admin Settings
ADMIN_EMAIL=admin@example.com

# Storage Configuration
STORAGE_PROVIDER=minio
STORAGE_PUBLIC_BUCKET=local-public
STORAGE_PRIVATE_BUCKET=local-private
STORAGE_REGION=us-east-1
STORAGE_INTERNAL_ENDPOINT=http://minio:9000
STORAGE_EXTERNAL_ENDPOINT=http://localhost:9000
STORAGE_USE_SSL=false
STORAGE_FORCE_EXTERNAL_SSL=false
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
GCP_PROJECT_ID=your-gcp-project-id

# Security & Session Configuration
TOKEN_SYMMETRIC_KEY=your-token-symmetric-key
INTERNAL_API_KEY=dev-api-key-12345
COOKIE_HASH_KEY=ADefaultHashKeyFor32BytesSecureHashing
COOKIE_BLOCK_KEY=ADefaultBlockKeyShould32BytesLength
COOKIE_DOMAIN=

# Frontend Configuration  
NODE_ENV=development
