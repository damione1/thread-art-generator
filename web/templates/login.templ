package templates

import "github.com/Damione1/thread-art-generator/web/client"

templ Login(errorMessage string) {
	@LoginWithValidation(client.ParseValidationError(errorMessage), "")
}

// LoginWithFormValues renders the login page with form values pre-populated
templ LoginWithFormValues(errorMessage, email string) {
	@LoginWithValidation(client.ParseValidationError(errorMessage), email)
}

templ LoginWithValidation(errors *client.ValidationErrors, email string) {
	@Layout("Login", nil) {
		<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
			<div class="sm:mx-auto sm:w-full sm:max-w-sm">
				<h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white">
					Sign in to your account
				</h2>
			</div>
			<div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
				@FormErrors(errors)
				<form class="space-y-6" action="/login" method="POST">
					@InputFieldWithMapping("email", "email", "email", "Email address", "", email, true, errors, "email")
					@PasswordField("password", "password", "Password", "", true, errors, true)
					@SubmitButton("Sign in")
				</form>
				<p class="mt-10 text-center text-sm text-gray-400">
					Not a member?
					<a href="/register" class="font-semibold leading-6 text-indigo-400 hover:text-indigo-300">
						Create an account
					</a>
				</p>
			</div>
		</div>
	}
}
